# AI Chatbot Agent Environment Variables

# Server
PORT=8000
PRODUCTION=false

# Database
POSTGRES_URI=postgresql://username:password@localhost:5432/examio_db
MONGODB_URI=mongodb://localhost:27017/examio_chat

# JWT Configuration (for internal API auth)
JWT_SECRET_KEY=your_jwt_secret_key_replace_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
SECRET_KEY=your_secret_key_for_auth

# LLM Configuration - Gemini (Cloud)
GOOGLE_API_KEY=your_google_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash
GEMINI_API_KEY=your_gemini_api_key

# LLM Configuration - Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest
RAG_MODEL=qwen3:8b

# LLM Configuration - HuggingFace
HF_TOKEN=your_huggingface_token
DEFAULT_MODEL_PATH=NousResearch/Hermes-2-Pro-Llama-3-8B

# Model Settings (Optional)
DEFAULT_MODEL_TYPE=gemini
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9
DEFAULT_TOP_K=40
DEFAULT_MAX_TOKENS=2048

# External Services (Optional)
OPENWEBUI_URL=http://localhost:3000

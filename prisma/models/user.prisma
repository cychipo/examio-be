model User {
  id String @unique
  email    String   @unique
  username String   @unique
  name     String?
  avatar   String?
  banner   String?
  bio      String?
  isAdmin  Boolean  @default(false)
  isVerified Boolean @default(false)
  password String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  verifyAccountCode VerifyAccountCode?
  resetPasswordCode ResetPasswordCode?
}

model TempSocialUser {
  id String @unique
  username String @unique
  avatar String?
  provider String
  createdAt DateTime @default(now())
}

model VerifyAccountCode {
  id String @unique
  userId String @unique
  code String @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ResetPasswordCode {
  id String @unique
  userId String @unique
  code String @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

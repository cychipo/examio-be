# =============================================================================
# Examio Microservices Environment Variables (Production Template)
# copy this file to .env and fill in the values
# =============================================================================

# Core
NODE_ENV=production
PORT=3000

# Security
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRATION=1d
REFRESH_TOKEN_SECRET=change_this_to_another_secure_string
REFRESH_TOKEN_EXPIRATION=7d

# Database (PostgreSQL)
# Format: postgresql://user:password@host:port/database?schema=public
# If using internal postgres service: host=postgres
DATABASE_URL=postgresql://postgres:password@postgres:5432/examio
POSTGRES_PASSWORD=password

# Redis (Session/Cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ (Message Queue)
RABBITMQ_USER=admin
RABBITMQ_PASS=admin_password
RABBITMQ_URL=amqp://admin:admin_password@rabbitmq:5672

# AI Service Configuration
# OpenAI
OPENAI_API_KEY=sk-...
# Gemini
GEMINI_API_KEY=AI...
# Ollama (if running external or locally)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# R2 Storage (Cloudflare)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=examio-bucket
R2_PUBLIC_URL=https://pub-....r2.dev

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://api.yourdomain.com/auth/google/callback

# Service URLs (Internal Docker Network)
AUTH_SERVICE_URL=http://auth:3001
EXAM_SERVICE_URL=http://exam:3002
FINANCE_SERVICE_URL=http://finance:3003
AI_SERVICE_URL=http://ai:8000
GATEWAY_URL=http://gateway:3000

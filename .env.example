# Core
NODE_ENV=production
PORT=7000
FRONTEND_URL=https://examio.vn

# Security
JWT_SECRET=change_this_to_a_secure_random_string_min_32_chars
JWT_EXPIRATION=1d
REFRESH_TOKEN_SECRET=change_this_to_another_secure_string
REFRESH_TOKEN_EXPIRATION=7d

# Quiz Security (Exam Service)
QUIZ_JWT_SECRET=change_this_to_quiz_secret_32_chars_min
QUIZ_AES_KEY=change_this_to_aes_key_32_chars_min

# Database (PostgreSQL) - External
# Note: Use your VPS IP or 'host.docker.internal' if DB is on host. Do not use 'localhost' inside Docker.
DATABASE_URL=postgresql://user:password@your_vps_ip:5432/examio

# Redis - External
REDIS_HOST=your_vps_ip
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ (Message Queue)
RABBITMQ_USER=admin
RABBITMQ_PASS=admin_password
RABBITMQ_URL=amqp://admin:admin_password@rabbitmq:5672

# ============ AI Service Configuration ============
GEMINI_API_KEYS=key1,key2
GEMINI_MODEL_NAMES=gemini-2.0-flash,gemini-1.5-flash

# OpenAI
OPENAI_API_KEY=sk-...

# Ollama (Optional)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest
RAG_MODEL=qwen3:8b

# AI Settings
DEFAULT_MODEL_TYPE=gemini
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# ============ R2 Storage (Cloudflare) ============
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=examio
R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-....r2.dev

# ============ Payment (SePay) ============
PAYMENT_SERVICE_SEPAY_KEY=
PAYMENT_BASE_URL=https://my.sepay.vn
PAYMENT_QR_BANK_ACCOUNT=
PAYMENT_QR_BANK_CODE=
PAYMENT_WEBHOOK_SECRET_KEY=

# ============ Mail Configuration ============
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# ============ OAuth Providers ============
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://api.examio.vn/api/v1/auth/google/callback

# Facebook
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=https://api.examio.vn/api/v1/auth/facebook/callback

# Github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=https://api.examio.vn/api/v1/auth/github/callback

# ============ Service URLs (Internal Docker Network) ============
# Do not change these unless you rename services in docker-compose
AUTH_SERVICE_URL=http://auth:7001
EXAM_SERVICE_URL=http://exam:7002
FINANCE_SERVICE_URL=http://finance:7003
AI_SERVICE_URL=http://ai:7005
GATEWAY_URL=http://gateway:7000

# gRPC Configuration (Internal)
AUTH_GRPC_URL=auth:50051
R2_GRPC_URL=r2:50054
WALLET_GRPC_URL=finance:50053

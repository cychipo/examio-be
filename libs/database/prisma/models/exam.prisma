model QuizPracticeAttempt {
    id              String   @id @default(cuid())
    quizSetId       String
    userId          String
    type            Int      @default(0) // 0: PRACTICE (thi thử), 1: REAL (thi thật)
    answers         Json     @default("{}") // { questionId: selectedAnswer }
    currentIndex    Int      @default(0) // Câu hỏi hiện tại
    markedQuestions String[] @default([]) // Danh sách câu hỏi đánh dấu

    // Thời gian làm bài
    timeSpentSeconds Int  @default(0) // Thời gian đã làm (giây)
    timeLimitMinutes Int? // Giới hạn thời gian (phút), null = không giới hạn

    // Trạng thái
    isSubmitted    Boolean @default(false)
    score          Float? // Điểm sau khi nộp bài
    totalQuestions Int     @default(0)
    correctAnswers Int     @default(0)

    // Timestamps
    startedAt   DateTime  @default(now())
    submittedAt DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @default(now()) @updatedAt
    createdBy   String?
    updatedBy   String?

    quizSet QuizSet @relation(fields: [quizSetId], references: [id], onDelete: Cascade)
    user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    // Unique constraint: mỗi user chỉ có 1 bản ghi cho mỗi quizSet với mỗi type
}


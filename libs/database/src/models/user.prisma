model User {
    id         String   @unique
    email      String   @unique
    username   String   @unique
    name       String?
    avatar     String?
    banner     String?
    bio        String?
    role       String   @default("student") // teacher | student
    isAdmin    Boolean  @default(false)
    isVerified Boolean  @default(false)
    password   String?
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    createdBy  String?
    updatedBy  String?

    verifyAccountCode         VerifyAccountCode?
    resetPasswordCode         ResetPasswordCode?
    userStorage               UserStorage[]
    wallet                    Wallet?
    payments                  Payment[]
    quizSets                  QuizSet[]
    flashCardSets             FlashCardSet[]
    examRooms                 ExamRoom[]
    examAttempts              ExamAttempt[]
    historyGeneratedQuizz     HistoryGeneratedQuizz[]
    historyGeneratedFlashcard HistoryGeneratedFlashcard[]
    quizPracticeAttempts      QuizPracticeAttempt[]
    aiChats                   AIChat[]
    subscription              UserSubscription?
    sessions                  UserSession[]
    monthlyFileUploads        UserMonthlyFileUpload[]
}

// Subscription tiers: 0=none, 1=basic, 2=advanced, 3=vip
model UserSubscription {
    id              String    @unique
    userId          String    @unique
    tier            Int       @default(0) // 0=none, 1=basic, 2=advanced, 3=vip
    billingCycle    String    @default("monthly") // monthly | yearly
    lastPaymentDate DateTime?
    nextPaymentDate DateTime?
    isActive        Boolean   @default(false)
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @updatedAt
    createdBy       String?
    updatedBy       String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerifyAccountCode {
    id        String   @unique
    userId    String   @unique
    code      String   @unique
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ResetPasswordCode {
    id        String   @unique
    userId    String   @unique
    code      String   @unique
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Track monthly file uploads for subscription limits
model UserMonthlyFileUpload {
    id        String   @id @default(cuid())
    userId    String
    yearMonth String // Format: "2024-12" for efficient monthly grouping
    count     Int      @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([userId, yearMonth])
    @@index([userId, yearMonth])
}
